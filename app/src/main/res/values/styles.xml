<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:paddingLeft">@dimen/text_view_padding_left_right</item>
        <item name="android:paddingTop">@dimen/text_view_padding_top_bottom</item>
        <item name="android:paddingRight">@dimen/text_view_padding_left_right</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_top_bottom</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorTextView</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="RightTextViewStyle" parent="TextViewStyle">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center|right</item>
    </style>

    <style name="LeftTextViewStyle" parent="TextViewStyle">
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/colorTextLabel</item>
    </style>

    <style name="DescriptionTextViewStyle" parent="TextViewStyle">
        <item name="android:gravity">left|center</item>
    </style>

    <style name="TypeTextViewStyle" parent="TextViewStyle">
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StateTextViewStyle" parent="TextViewStyle">
        <item name="android:paddingTop">@dimen/text_view_state_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/text_view_state_padding_top_bottom</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextState</item>
        <item name="android:layout_marginBottom">@dimen/text_view_state_margin</item>
        <item name="android:layout_marginTop">@dimen/text_view_state_margin</item>
    </style>

</resources>
