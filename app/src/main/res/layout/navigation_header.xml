<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerTextView"
        android:layout_marginTop="@dimen/nav_drawer_header_text_view_margin"
        android:layout_marginBottom="@dimen/nav_drawer_header_text_view_margin"
        android:layout_marginLeft="@dimen/nav_drawer_header_text_view_margin_left"
        android:text="@string/nav_item_header"
        android:textStyle="bold"
        android:textColor="#89ffffff"
        android:textSize="@dimen/nav_drawer_header_text_size" />
</LinearLayout>